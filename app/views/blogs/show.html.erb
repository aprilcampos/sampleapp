<div class="container">
  <h1 class="mt-4 mt-lg-5"><%= @blog.title %></h1>
  <hr>
</div>

<div class="container blog-container bg-tranparent">
  <div class="mt-4">
    <div class="row">

      <div class="col-sm-8">
        <div class="blog-main">

          <nav class="breadcrumb">
            <%= link_to "Home", root_path, class: 'breadcrumb-item' %>
            <%= link_to @blog.topic.title, topic_path(@blog.topic), class: 'breadcrumb-item' %>

            <span class="breadcrumb-item active text-white"><%= @blog.title %></span>

          </nav>

          <%= link_to 'Edit', edit_blog_path(@blog) if logged_in?(:site_admin) %>

          <p>
            <%= markdown @blog.body %>
          </p>

          <%= render 'comments/comment_form' %>

          <div id="comments" data-blog-id="<%= @blog.id %>">
            <%= render @blog.comments %>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <%= render "shared/blog_sidebar" %>
      </div>
      
    </div>
  </div>
</div>