<div>
  <h1 class="mt-4 mt-lg-5"><%= @portfolio_item.title %></h1>
  <hr>
</div>

<div class="blog-container bg-tranparent">
  <div class="row">
    <div class="col-md-7">
      <% if @portfolio_item.thumb_image.present? && @portfolio_item.thumb_image.url.present? %>
        <%= image_tag portfolio_img(@portfolio_item.main_image, 'main'), width: '100%' %>
      <% else %>
        <svg class="bd-placeholder-img card-img-top" width="300px" height="300px" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: main_image" preserveAspectRatio="xMidYMid slice" focusable="false">
          <title>Placeholder</title>
          <rect width="100%" height="100%" fill="#55595c"/>
          <text x="50%" y="50%" fill="#eceeef" dy=".3em" text-anchor="middle">Main Image</text>
        </svg>
      <% end %>
    </div>

    <div class="col-md-5 text-start">
      <em><%= @portfolio_item.subtitle %></em>
      
      <p class="mt-3"><%= @portfolio_item.body %></p>

      <hr>

      <h3>Technologies Used:</h3>

      <% techs = @portfolio_item.technologies %>

      <% if techs.size > 6 %>
        <div class="row">
          <div class="col-md-6">
            <% techs.first((techs.size / 2.0).ceil).each do |tech| %>
              <span><%= tech.name %></span><br>
            <% end %>
          </div>
          <div class="col-md-6">
            <% techs.last((techs.size / 2.0).floor).each do |tech| %>
              <span><%= tech.name %></span><br>
            <% end %>
          </div>
        </div>
      <% else %>
        <% techs.each do |tech| %>
          <span><%= tech.name %></span><br>
        <% end %>
      <% end %>

    </div>
  </div>
</div>