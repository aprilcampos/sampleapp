<div id="portfolio_form">
  <%= form_for(@portfolio_item) do |f| %>
    <%= render 'shared/form_errors', object: @portfolio_item %>

    <div class="row">
      <div class="col-md-8">
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :subtitle %>
          <%= f.text_field :subtitle, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :main_image, 'Main Image', class: 'form-label' %>
          <%= f.file_field :main_image, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :thumb_image, 'Thumbnail Image', class: 'form-label' %>
          <%= f.file_field :thumb_image, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: 'form-control', rows: 13 %>
        </div>
      </div>
    </div>

    <hr>

    <div class="col-md-8">
      <h2 class="text-start">Technologies Used:</h2>
      <div>
        <%= f.fields_for :technologies do |technology_form| %>
          <%= render 'technology_fields', f: technology_form %>
        <% end %>

        <div>
          <%= link_to_add_association 'Add Technology', f, :technologies, data: { turbo: false }, class: 'btn btn-primary btn-block w-100 mt-2' %>
        </div>
      </div>

      <div class="form-group mt-5">
        <%= f.submit 'Save Portfolio Item', class: 'btn btn-secondary text-white' %>
      </div>
    </div>
  <% end %>
</div>