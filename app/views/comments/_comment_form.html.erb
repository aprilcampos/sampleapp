<% unless current_user.is_a? GuestUser %>
  <div
    data-controller="comment-form"
    data-comment-form-blog-id-value="<%= @blog.id %>">
    <div class="form-group">
      <label for="comment_content">Content</label>
      <textarea
        id="comment_content"
        class="form-control"
        data-comment-form-target="textarea"></textarea>
    </div>
    <button
      class="btn btn-primary"
      data-action="click->comment-form#send">Post Comment</button>
  </div>
<% end %>